<h1>Inventory</h1>

<div class="inventory-cards">
  <% @inventories.each do |item| %>
    <div class="card">
      <div class="card-header">
        <h3><%= item.name %></h3>
      </div>
      <div class="card-body">
        <%= form_with(model: item, method: :delete, data: { confirm: 'Are you sure?' }) do |form| %>
          <%= form.submit "Remove", class: "btn btn-danger" %>
        <% end %>
        <%= link_to "View", inventory_path(item), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
