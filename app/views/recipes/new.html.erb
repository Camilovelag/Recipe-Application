<h1>New Recipe</h1>
<%= form_with  model: @recipe, local: true do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
  <%= f.label :public %>
    <%= f.check_box :public %>
  </div>
  <div>
    <%= f.label :preparation_time %>
    <%= f.text_field :preparation_time %>
  </div>
  <div>
    <%= f.label :cooking_time %>
    <%= f.text_field :cooking_time %>
  </div>
  <div>
  <%= f.label :description %>
  <%= f.text_area :description %>
  </div>
    <%= f.submit 'Post' %>
  </div>
<% end %>