<main class='container-fluid px-5 d-flex flex-column align-items-center gap-3'>
  <h1>Add new ingredient</h1>
  <%= form_with url: recipe_recipe_foods_path(params[:recipe_id]), method: :post, model: @recipe_food, class: 'd-flex flex-column gap-2' do |f| %>
    <div class='d-flex gap-2 justify-content-between'>
      <%= f.label :quantity %>
      <%= f.text_field :quantity, class:'border border-dark border-3' %>
    </div>
    <div class='d-flex justify-content-center'>
      <%= f.submit 'Add', class: 'btn-1 w-fit-content' %>
    </div>
  <% end %>
</main>