<main>
  <%= button_to 'Add ingredient', new_recipe_recipe_food_path(@recipe), method: :get %>
  <ul class='container-fluid'>
    <% @recipe_foods.each do |recipe_food| %>
      <li class='d-flex justify-content-between'>
        <p>
          <%= recipe_food.food.name %>
        </p>
        <p>
          <%= recipe_food.quantity %>
        </p>
        <p>
          <%= recipe_food.food.price * recipe_food.quantity %>
        </p>
        <%= button_to 'Modify', edit_recipe_recipe_food_path(recipe_id: params[:recipe_id], id: recipe_food.id), method: :get %>
        <%= button_to 'Remove', recipe_recipe_food_path(recipe_id: params[:recipe_id], id: recipe_food.id), method: :delete %>
      </li>
    <% end %>
  </ul>
</main>